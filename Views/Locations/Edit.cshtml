@model NBD3.Models.Location

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LocationId" />

            <!-- Location Information -->
            <div class="form-group">
                <label asp-for="LocationName" class="control-label"></label>
                <input asp-for="LocationName" class="form-control" placeholder="Enter location..."/>
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationPhone" class="control-label"></label>
                <input asp-for="LocationPhone" class="form-control" placeholder="(123)-456-7890" />
                <span asp-validation-for="LocationPhone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationContactPer" class="control-label"></label>
                <input asp-for="LocationContactPer" class="form-control" placeholder="Enter contact person..."/>
                <span asp-validation-for="LocationContactPer" class="text-danger"></span>
            </div>

            <!-- Address Information -->
            <div class="form-group">
                <label asp-for="LocationStreetAddress" class="control-label"></label>
                <input asp-for="LocationStreetAddress" class="form-control" placeholder="Enter street name..." />
                <span asp-validation-for="LocationStreetAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationPostalCode" class="control-label"></label>
                <input asp-for="LocationPostalCode" class="form-control" placeholder="A1A 1A1" />
                <span asp-validation-for="LocationPostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationCityAddress" class="control-label"></label>
                <input asp-for="LocationCityAddress" class="form-control" placeholder="Enter city..."/>
                <span asp-validation-for="LocationCityAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LocationCountryAddress" class="control-label"></label>
                <input asp-for="LocationCountryAddress" class="form-control" placeholder="Enter country..."/>
                <span asp-validation-for="LocationCountryAddress" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                &nbsp;
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>

        </form>
    </div>
</div>
