@model NBD3.Models.Staff

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Staff</h4>
    <hr />
    <dl class="row">
        @{
            if (Model.StaffPhoto?.Content != null)
            {
                @:<div>
                    string imageBase64 = Convert.ToBase64String(Model.StaffPhoto.Content);
                    string imageSrc = string.Format("data:" + Model.StaffPhoto.MimeType + ";base64,{0}", imageBase64);
                    <img src="@imageSrc" alt="Profile Picture of @Model.StaffFirstName" title="Profile Picture of @Model.StaffFirstName" class="img-fluid rounded" />
                @:</div><hr />
            }
            else
            {
                <p class="text-center">No picture available.</p>
            }
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StaffTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StaffTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StaffFirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StaffFirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StaffLastname)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StaffLastname)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StaffPhone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StaffPhone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StaffEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StaffEmail)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model?.StaffID">Edit</a>
    <a asp-action="Index" class="btn btn-outline-secondary ml-2">Back to List</a>
</div>
