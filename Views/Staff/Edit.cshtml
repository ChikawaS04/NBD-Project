@model NBD3.Models.Staff

@{
    ViewData["Title"] = "Edit";

    var hasPicture = (Model.StaffPhoto?.Content != null);
    if (hasPicture)
    {
            @:<div>
                string imageBase64 = Convert.ToBase64String(Model.StaffPhoto.Content);
                string imageSrc = string.Format("data:" + Model.StaffPhoto.MimeType + ";base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Profile Picture of @Model.StaffFirstName" title="Profile Picture of @Model.StaffFirstName" class="img-fluid rounded" />
            @:</div><hr />
    }
}

<h1>Edit</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StaffID" />
            <div>
                @{
                    if (hasPicture)
                    {
                        <div class="row">
                            <div class="form-check m-3">
                                <input class="form-check-input" type="checkbox" id="chkRemoveImage" name="chkRemoveImage">
                                <label class="form-check-label" for="chkRemoveImage">
                                <strong>Check to remove Image</strong>
                                </label>
                            </div>
                        </div>
                    }
                }
            </div>
            <div class="form-group">
                <label class="control-label custom-file-label">Picture File:</label>
                <div class="input-group mb-3">
                    <input type="file" class="form-control" name="pictureFile" id="pictureFile">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="StaffTitle" class="control-label"></label>
                <input asp-for="StaffTitle" class="form-control" placeholder="Enter title..."/>
                <span asp-validation-for="StaffTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffFirstName" class="control-label"></label>
                <input asp-for="StaffFirstName" class="form-control" placeholder="Enter first name..."/>
                <span asp-validation-for="StaffFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffLastname" class="control-label"></label>
                <input asp-for="StaffLastname" class="form-control" placeholder="Enter last name..."/>
                <span asp-validation-for="StaffLastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffPhone" class="control-label"></label>
                <input asp-for="StaffPhone" class="form-control" placeholder="(123)-456-7890"/>
                <span asp-validation-for="StaffPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StaffEmail" class="control-label"></label>
                <input asp-for="StaffEmail" class="form-control" placeholder="username@example.com"/>
                <span asp-validation-for="StaffEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

